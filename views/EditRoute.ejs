<head>
    <title>Bus sim</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <%- include('../template/layout/header') %>
</head>
<body>
    <form action="/editRoute" method="POST">
        <input hidden value="<%= buses[busIDNo].id %>" name="busID" id="busID">
        <input hidden value="<%=[busIDNo]%>" name="busIDNo" id="busIDNo">
        <input hidden value="<%=routeIDNo %>" name="routeID" id="routeID">
        <div class="form-group">
            <label for="locName" class="control-label">Location</label>
            <input class="form-control" value="<%= buses[busIDNo].route[routeIDNo].locName %>" name="locName" id="locName" type="text" required>
        </div>
        <div class="form-group">
            <label for="lat" class="control-label">Location</label>
            <input class="form-control" value="<%= buses[busIDNo].route[routeIDNo].lat %>" name="lat" id="lat" type="text" required>
        </div>
        <div class="form-group">
            <label for="lng" class="control-label">Location</label>
            <input class="form-control" value="<%= buses[busIDNo].route[routeIDNo].lng %>" name="lng" id="lng" type="text" required>
        </div>
        <button class="btn btn-primary" id="submitRoute">Submit</button>
    </form>
</body>